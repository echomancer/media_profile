!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Media Profile'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Media Profile'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .row
      .col-sm-3.no-pad#sidebar
        .sidebar-nav
          %header
            = render 'layouts/navigation'
      .col-sm-9.no-pad#content
        %main{:role => "main"}
          = render 'layouts/messages'
          = yield
